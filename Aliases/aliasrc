alias autoremove='sudo emerge -av --depclean'
alias goodnight='echo freeze | sudo tee /sys/power/state'
alias grubdate='grub-mkconfig -o /boot/grub/grub.cfg'
alias keepAwake='xset -dpms s off'
alias ls='ls --color=auto'
alias newuse='sudo emerge --ask --update --newuse --deep @world'
alias remindme='echo $1 | sudo tee -a /etc/motd'
alias sendTime='date +T%s > /dev/ttyUSB0'
alias startDev='VBoxManage startvm ADC --type headless'
alias startdb='sudo mkdir /run/postgresql && sudo chmod 777 /run/postgresql && pg_ctl -D /home/bsakai/classes/CSCI4380/psql -l /home/bsakai/classes/CSCI4380/psql_log start'
alias update='sudo emerge --sync'
alias upgrade='sudo emerge -uDU --ask --keep-going --with-bdeps=y @world'
